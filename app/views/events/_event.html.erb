<div id="<%= dom_id event %>">
  <p>
    <strong>Name:</strong>
    <%= event.name %>
  </p>
  <p>
    <strong>Body:</strong>
    <%= event.body %>
  </p>
  <div>
    <% if current_user %>
      <% joinable_text = current_user.events.include?(event) ? "Leave Event" : "Join Event" %>
      <strong><%= joinable_text %></strong>
      <%= button_to joinable_text, joinable_event_path(event) %>
    <% end %>
  </div>
  <div>
    <% event.users.each.with_index(1) do |user, index| %>
      <p>
        <span>[<%= index %>] <strong>User:</strong></span>
        <%= user.email %>
      </p>
    <% end %>
  </div>
</div>
